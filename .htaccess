<IfModule mod_rewrite.c>
Options +FollowSymLinks -MultiViews
RewriteEngine On

# Force www prefix
RewriteCond %{HTTP_HOST} ^www.jakeschweihs.com$ [NC]
RewriteCond %{HTTPS} =on
RewriteRule ^(.*)$ https://jakeschweihs.com/$1 [L,R=301]
RewriteCond %{HTTP_HOST} ^www.jakeschweihs.com$ [NC]
RewriteCond %{HTTPS} !=on
RewriteRule ^(.*)$ http://jakeschweihs.com/$1 [L,R=301]

# Remove trailing slashes.
# e.g. example.com/foo/ will redirect to example.com/foo
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.+)/$ /$1 [R=permanent,QSA]

# Redirect to PHP if it exists.
# e.g. example.com/foo will display the contents of example.com/foo.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+)$ $1.php [L,QSA]

# Redirect all other requsts to post.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php !-f
RewriteRule ^(.+)$ article.php?url=$1 [L,QSA]
</IfModule>

SetEnv TZ America/New_York